{# default Sliding pagination control implementation #}
<div class="card-footer py-4">

    <nav aria-label="...">
        <div class="row">
        <div class="col-md-4">
            <label for="pagination" style="font-size: small">RÃ©sultats par page</label>
            <select name="pagination" id="pagination" class="form-control-sm">
                <option value="10" {% if app.session.get('pagination_value') == 10 %} selected {% endif %}>10</option>
                <option value="50" {% if app.session.get('pagination_value') == 50 %} selected {% endif %}>50</option>
                <option value="100" {% if app.session.get('pagination_value') == 100 %} selected {% endif %}>100</option>
            </select>
        </div>
        <div class="col-md-8">
        <ul class="pagination justify-content-end mb-0">
            {% if pageCount > 1 %}
                <div class="pagination">

                    {% if first is defined and current != first %}

                        <li class="page-item">
                            <a class="page-link" rel="first" href="{{ path(route, query|merge({(pageParameterName): first})) }}">
                                <i class="fas fa-angle-double-left"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>

                        {#<span class="first">
                            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&lt;&lt;</a>
                        </span>#}
                    {% endif %}

                    {% if previous is defined %}

                        <li class="page-item">
                            <a class="page-link" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}" tabindex="-1">
                                <i class="fas fa-angle-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>

                        {#<span class="previous">
                            <a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt;</a>
                        </span>#}
                    {% endif %}

                    {% for page in pagesInRange %}
                        {% if page != current %}

                            <li class="page-item">
                                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }} <span class="sr-only">(current)</span></a>
                            </li>

                            {#<span class="page">
                                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                            </span>#}
                        {% else %}

                            <li class="page-item active">
                                <a class="page-link">{{ page }}</a>
                            </li>

                            {#<span class="current">{{ page }}</span>#}
                        {% endif %}
                    {% endfor %}

                    {% if next is defined %}

                        <li class="page-item">
                            <a class="page-link" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                                <i class="fas fa-angle-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>

                        {#<span class="next">
                            <a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&gt;</a>
                        </span>#}
                    {% endif %}

                    {% if last is defined and current != last %}
                        <li class="page-item">
                            <a class="page-link" rel="last" href="{{ path(route, query|merge({(pageParameterName): last})) }}">
                                <i class="fas fa-angle-double-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                        {#<span class="last">
                            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&gt;&gt;</a>
                        </span>#}
                    {% endif %}
                </div>
            {% endif %}
        </ul>
        </div>
        </div>
    </nav>
</div>



