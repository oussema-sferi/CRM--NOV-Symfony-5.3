                                                    <option value="ROLE_TELEPRO"
                                                            {% if user_to_update.roles[0] == "ROLE_TELEPRO" %}
                                                                selected
                                                            {% endif %}
                                                    >Téléprospecteur</option>
                                            </select>
                                        </div>
                                    </div>

