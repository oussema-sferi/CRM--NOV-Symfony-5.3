                                            {{ form_widget(user_form.firstName, {'attr': {'class': 'form-control', 'value': user_to_update.firstName }}) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" style="width:120px">Nom</span>
                                            </div>
                                            {{ form_widget(user_form.lastName, {'attr': {'class': 'form-control', 'value': user_to_update.lastName }}) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" style="width:120px">Email</span>
                                            </div>
                                            {{ form_widget(user_form.email, {'attr': {'class': 'form-control', 'value': user_to_update.email }}) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" style="width:120px">Rôle</span>
                                            </div>
                                            <select class="form-control" name="role" id="role">
                                                    <option value="ROLE_SUPERADMIN"
                                                                {% if user_to_update.roles[0] == "ROLE_SUPERADMIN" %}
                                                                    selected
                                                                {% endif %}
                                                            >Super Admin</option>
                                                    <option value="ROLE_ADMIN"
                                                            {% if user_to_update.roles[0] == "ROLE_ADMIN" %}
                                                                selected
                                                            {% endif %}
                                                    >Admin</option>
                                                    <option value="ROLE_COMMERCIAL"
                                                            {% if user_to_update.roles[0] == "ROLE_COMMERCIAL" %}
                                                                selected
                                                            {% endif %}
