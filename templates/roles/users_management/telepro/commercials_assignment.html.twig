{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
{% endblock %}

{% block title %}Affectation des commerciaux{% endblock %}

{% block body %}

    <div class="header pb-6" style="background-color: #EDA200">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-10 col-7">
                        <h6 class="h2 text-white d-inline-block mb-0">CRM</h6>
                        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                <li class="breadcrumb-item"><i class="ni ni-single-02 text-black-50"></i></li>
                                <li class="breadcrumb-item">Utilisateurs & Rôles</li>
                                <li class="breadcrumb-item">Gestion des affectations</li>
                                <li class="breadcrumb-item"><a href="{{ path('telepro_listing') }}">Liste des téléprospecteurs</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Affectation des commerciaux</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-lg-2 col-5 text-right">
                        <a href="{{ path('telepro_listing') }}" class="btn btn-sm btn-neutral">Retour</a>
                    </div>
                </div>
                <!-- Card stats -->
            </div>
        </div>
    </div>


    <div class="container-fluid mt--8">

        <div class="header pb-8 pt-5 pt-md-14">
            <div class="container-fluid">
                <div class="header-body" style="text-align: center">
                    <h1 style="color: black"></h1>
                </div>
            </div>
        </div>

        <div class="container mt--8 pb-5">
            <!-- Table -->
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="card bg-secondary border-0">

                        <div class="card-body px-lg-5 py-lg-5">
                            <div class="text-center text-muted mb-4">
                            </div>

                            <form action="{{ path('telepro_commercials_assignment') }}" method="post">
                                <div>
                                    <div class="form-group">
                                        <label class="form-control-label" for="input-commercial">Téléprospecteur</label>
                                        <input type="text" id="input-telepro" name="telepro" class="form-control" value="{{ telepro.firstName ~ ' ' ~ telepro.lastName }}" disabled>
                                        <input type="text" id="hidden-telepro" name="teleproid" class="form-control" value="{{ telepro.id }}" hidden>
                                        <input type="text" id="commercials" name="commercials" class="form-control" hidden>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="form-control-label" for="department">Commerciaux Affectés</label><br>
                                    <select id="commercial" name="commercial" multiple>

                                            {% for commercial in all_commercials %}

                                                             <option value="{{ commercial.id }}"
                                                                     {% for assigned_commercial in assigned_commercials %}
                                                                         {% if assigned_commercial.id == commercial.id %}
                                                                             selected
                                                                         {% endif %}
                                                                     {% endfor %}
                                                             >{{ commercial.firstName ~ ' ' ~ commercial.lastName }}</option>

                                            {% endfor %}

                                    </select>
                                </div>

                                {% for message in app.flashes('notice_commercials_assignment') %}
                                    <div style="color: green">
                                        <small>
                                            {{ message }}
                                        </small>
                                    </div>
                                {% endfor %}

                                <div class="text-center">
                                    <button id="sub" type="submit" class="btn btn-success mt-4">Confirmer</button>
                                </div>

                            </form>

                            {#{{ form_start(call_form) }}



                            <div class="form-group">

                                    <label class="form-control-label" for="input-username">Statut</label>
                                    {{ form_widget(call_form.generalStatus, {'attr': {'class': 'form-control form-control-sm' }}) }}

                            </div>

                            <div class="form-group">

                                <label class="form-control-label" for="input-username">Détails</label>
                                {{ form_widget(call_form.statusDetails, {'attr': {'class': 'form-control form-control-sm' }}) }}

                            </div>

                            <div class="form-group">

                                    <div>
                                        <label class="form-control-label" for="input-username">Observations</label>
                                    </div>

                                    {{ form_widget(call_form.callNotes, {'attr': {'class': 'form-control', 'placeholder':"..." }}) }}

                            </div>



                            <div class="text-center">
                                <button type="submit" class="btn btn-success mt-4">Confirmer</button>
                            </div>

                            {{ form_end(call_form)}}#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

