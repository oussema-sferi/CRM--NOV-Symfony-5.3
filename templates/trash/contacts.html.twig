{% extends 'base.html.twig' %}

{% block title %}Contacts Supprimés{% endblock %}

{% block body %}

    <div class="header pb-6" style="background-color: #EDA200">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <h6 class="h2 text-white d-inline-block mb-0">CRM</h6>
                        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                <li class="breadcrumb-item"><i class="ni fas fa-trash-alt text-teal"></i></li>
                                <li class="breadcrumb-item">Corbeille</li>
                                <li class="breadcrumb-item active" aria-current="page">Liste des contacts supprimés</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-lg-6 col-5 text-right">
                        {#<a href="{{ path('new_user') }}" class="btn btn-sm btn-success">Nouveau utilisateur</a>#}
                        {#<a href="#" class="btn btn-sm btn-neutral">Filters</a>#}
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <div class="row">
                            <div class="col-md-9">
                                <h3 class="mb-0">Total: {{ all_deleted_contacts|length }} Contacts</h3>
                            </div>
                            <div class="col-md-3">
                                {#<input type="text" class="form-control " placeholder="Recherche" id="contact-filter">#}
                            </div>
                        </div>
                    </div>
                    <!-- Light table -->
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Email</th>
                                <th scope="col">Catégorie</th>
                                {#<th scope="col">Equipement</th>#}
                                <th scope="col">Adresse</th>
                                <th scope="col">Code Postal</th>
                                <th scope="col">Département</th>
                                <th scope="col">Commune</th>
                                <th scope="col">Pays</th>
                                <th scope="col">Numéro Domicile</th>
                                <th scope="col">Numéro Mobile</th>
                                <th scope="col">Société</th>
                                <th scope="col">Sous Contrat</th>
                                <th scope="col">Date de suppression</th>
                                <th scope="col">Actions</th>
                                {#<th scope="col">Traitement</th>#}
                                {#<th scope="col">état</th>
                                <th scope="col">Détails</th>
                                <th scope="col">Observations Appel</th>
                                <th scope="col">Observations RDV</th>
                                <th scope="col">Actions</th>#}
                                {#<th scope="col">Modification</th>
                                <th scope="col">Suppression</th>#}
                            </tr>
                            </thead>
                            <tbody class="list">

                            {% for contact in deleted_contacts %}
                                <tr>
                                    <td class="budget">
                                        {{ contact.firstName }}
                                    </td>

                                    <td class="budget">
                                        {{ contact.lastName }}
                                    </td>

                                    <td class="budget">
                                        {{ contact.email }}
                                    </td>


                                    <td class="budget">
                                        {% if  contact.category == 1 %}
                                            Médecin
                                        {% elseif contact.category == 2 %}
                                            Vétérinaire
                                        {% elseif contact.category == 3 %}
                                            Chirurgien
                                        {% endif %}
                                    </td>

                                    {#<td class="budget">
                                        {% if client.providedEquipment %}
                                        {{ client.providedEquipment.designation }}
                                        {% else %}
                                        {% endif %}
                                    </td>#}



                                    <td class="budget">
                                        {{ contact.address }}
                                    </td>

                                    <td class="budget">
                                        {{ contact.postalCode }}
                                    </td>

                                    <td class="budget">
                                        {{ contact.geographicArea.designation }}
                                    </td>

                                    <td class="budget">
                                        {{ contact.city }}
                                    </td>

                                    <td class="budget">
                                        {{ contact.country }}
                                    </td>

                                    <td class="budget">
                                        {{ contact.phoneNumber }}
                                    </td>

                                    <td class="budget">
                                        {{ contact.mobileNumber }}
                                    </td>

                                    <td class="budget">
                                        {{ contact.companyName }}
                                    </td>

                                    <td class="budget">
                                        {% if contact.isUnderContract is null %}

                                        {% elseif contact.isUnderContract == 0 %}
                                            Non
                                        {% elseif contact.isUnderContract == 1 %}
                                            Oui
                                        {% endif %}
                                    </td>
                                    <td class="budget">
                                        {{ contact.deletionDate|format_datetime(locale='fr') }}
                                    </td>
                                    <td >
                                        <a href="" data-toggle="modal" data-target="#restoreModal{{ contact.id }}" class="badge badge-success" >Restaurer Contact</a>
                                    </td>

                                    {#<td >
                                        <a href="{{ path('call_handle', {'id': client.id}) }}"  class="badge badge-success" >Traiter Contact</a>
                                    </td>#}

                                    {#{% if client.calls|default %}
                                    {% if client.calls[client.calls|length - 1].callNotes is not null %}
                                    <td class="budget" style="text-align: center">
                                        <button class="notes" data-container="body" type="button" data-toggle="popover" data-color="info" data-placement="top" data-content= "{{ client.calls[client.calls|length -1].callNotes }}">
                                            <i class="far fa-comment text-cyan"></i>
                                        </button>
                                    </td>
                                    {% else %}
                                        <td >Non Défini</td>
                                    {% endif %}

                                    {% else %}
                                        <td>Non Défini</td>
                                    {% endif %}#}
                                    {#{% if client.calls|default %}#}
                                    {#<td >
                                    <a href="{{ path('show_client', {'id': client.id}) }}"  class="badge badge-default" >Consulter Fiche</a>
                                </td>

                                <td >
                                    <a href="{{ path('update_client', {'id': client.id}) }}"  class="badge badge-info" >Modifier Contact</a>
                                </td>

                                <td >
                                    <a href="{{ path('new_client') }}" data-href="/admin_resp/ingenieur/oussingenieurref/deleted" class="badge badge-danger" data-toggle="modal" data-target="#deleteModal">Supprimer Contact</a>
                                </td>#}

                                </tr>

                                <div class="modal fade" id="restoreModal{{ contact.id }}" tabindex="-1" role="dialog" aria-labelledby="restoreModal" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        {#<form action="{{ path('delete_contact', {'id': client.id}) }}" method="post">#}
                                        <div class="modal-content">
                                            <div class="modal-header" style="margin: 0 auto">
                                                <h5 class="modal-title" id="exampleModalLabel">Avertissement</h5>
                                                {#<button type="button" class="close" data-dismiss="modal" aria-label="Close">#}{#
                                                #}{#<span aria-hidden="true">&times;</span>#}{#
                                                </button>#}
                                            </div>
                                            <div class="modal-body" style="margin: 0 auto">
                                                Êtes-vous sûr de vouloir restaurer "{{ contact.firstName ~ ' ' ~ contact.lastName }}" ?
                                            </div>
                                            <div class="modal-footer" style="margin: 0 auto">
                                                <button type="button" class="btn btn-success" data-dismiss="modal">Annuler</button>
                                                <a href="{{ path('restore_contact', {'id': contact.id}) }}" class="btn btn-danger">Confirmer</a>
                                            </div>

                                        </div>
                                        {#</form>#}
                                    </div>
                                </div>

                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                    <!-- Card footer -->
                    {{ knp_pagination_render(deleted_contacts) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block additionalJs %}
    <script>
        $('#pagination').hover(function () {
            $(this).css('cursor','pointer');
        })

        $('#pagination').change(function () {

            $.ajax({
                url:"{{ path('deleted_contacts_pagination') }}",
                method: "POST",
                dataType: 'json',
                data : { paginationValue: this.value },
                success: (e) => {
                    location.reload();
                },
                error : (f) => {
                    console.log(f);
                }
            })

        })

    </script>
{% endblock %}
