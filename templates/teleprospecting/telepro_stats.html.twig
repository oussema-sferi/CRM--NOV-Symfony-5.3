                            {% for telepro in all_telepros %}
                            <tr>
                                <th scope="row">
                                    {{ telepro.firstName ~ ' ' ~ telepro.lastName }}
                                </th>
                                <td>
                                    {{ telepro.calls | length }}
                                </td>
                                <td>
