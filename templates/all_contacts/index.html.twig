                                    <td class="budget">
                                        {{ client.firstName }}
                                    </td>

                                    <td class="budget">
                                        {{ client.lastName }}
                                    </td>

                                    <td class="budget">
                                        {% if client.status == 1 %}
                                            <span class="badge badge-warning badge-lg">
                                        <i class="bg-warning"></i>
                                         Appel non Qualifié
                                        </span>
                                        {% elseif client.status == 2 %}
                                            <span class="badge badge-success badge-lg">
