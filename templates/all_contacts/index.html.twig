                                                <button class="notes" data-container="body" type="button" data-toggle="popover" data-color="info" data-placement="top" data-content= "{{ client.appointments[client.appointments|length -1].appointmentNotes }}">
                                                    <i class="far fa-comment text-cyan"></i>
                                                </button>
