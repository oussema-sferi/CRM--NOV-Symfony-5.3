                    <!-- Card header -->
                    <div class="card-header border-0">
                        <div class="row">
                            <div class="col-md-9">
                                <h3 class="mb-0">Total: {{ app.session.get('total_contacts')}} Contacts</h3>
                                <span>
                                    {% for message in app.flashes('add_contacts_confirmation') %}
