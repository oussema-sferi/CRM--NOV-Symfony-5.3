                                        #}{#<a href="{{ path('new_contact') }}"><i class="fas fa-trash-alt text-red"></i></a>#}{#
                                    </td>#}

                                </tr>
                                <div class="modal fade" id="deleteModal{{ client.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
