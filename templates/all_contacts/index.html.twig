                                            <small>
                                                {{ message }}
                                            </small>
                                        </div>
                                    {% endfor %}
                                </span>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control " placeholder="Recherche" id="contact-filter">
                            </div>
                        </div>
                    </div>
                    <!-- Light table -->
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Email</th>
                                <th scope="col">Société</th>
                                <th scope="col">Catégorie</th>
                                <th scope="col">Equipement</th>
                                <th scope="col">Sous Contrat</th>
                                <th scope="col">Statut</th>
                                <th scope="col">Adresse</th>
                                <th scope="col">Code Postal</th>
                                <th scope="col">Département</th>
                                <th scope="col">Commune</th>
                                <th scope="col">Pays</th>
                                <th scope="col">Numéro Domicile</th>
                                <th scope="col">Numéro Mobile</th>
                                {#<th scope="col">Traitement</th>#}
                                <th scope="col">Actions</th>
                                {#<th scope="col">Modification</th>
                                <th scope="col">Suppression</th>#}
                            </tr>
                            </thead>
                            <tbody class="list">

                            {% for client in clients %}
                                <tr>
                                    <td class="budget">
                                        {{ client.firstName }}
                                    </td>

                                    <td class="budget">
                                        {{ client.lastName }}
                                    </td>

                                    <td class="budget">
                                        {{ client.email }}
                                    </td>

                                    <td class="budget">
                                        {{ client.companyName }}
                                    </td>

                                    <td class="budget">
                                        {{ client.category }}
                                    </td>

                                    <td class="budget">
                                        {% if client.providedEquipment %}
                                        {{ client.providedEquipment.designation }}
                                        {% else %}
                                        {% endif %}
                                    </td>

                                    <td class="budget">
                                        {% if  client.isUnderContract %}
                                            Oui
                                        {% else %}
                                            Non
                                        {% endif %}
                                    </td>

                                    <td class="budget">
                                        {% if  client.status == 0 %}
                                            <span class="badge badge-warning badge-lg">
                                                <i class="bg-info"></i>
                                                Non Traité
                                            </span>
                                        {% elseif client.status == 1 %}
                                            <span class="badge badge-success badge-lg">
                                                <i class="bg-warning"></i>
                                                 En Cours de Traitement
                                            </span>
                                        {% else %}
                                            <span class="badge badge-dot mr-4">
                                                <i class="bg-success"></i>
                                                Traité
                                            </span>
                                        {% endif %}
                                    </td>

                                    <td class="budget">
                            {{ client.address }}
                        </td>

                        <td class="budget">
                            {{ client.postalCode }}
                        </td>

                        <td class="budget">
                            {{ client.geographicArea.designation }}
                        </td>

                        <td class="budget">
                            {{ client.city }}
                        </td>

                        <td class="budget">
                            {{ client.country }}
                        </td>

                        <td class="budget">
                            {{ client.phoneNumber }}
                        </td>

                        <td class="budget">
                            {{ client.mobileNumber }}
                        </td>

