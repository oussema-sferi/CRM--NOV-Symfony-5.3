{% extends 'base.html.twig' %}

{% block title %}Mes Contacts{% endblock %}

{% block body %}

    <div class="header pb-6" style="background-color: #EDA200">
        <div class="container-fluid">
            <div class="header-body">
                <div class="row align-items-center py-4">
                    <div class="col-lg-6 col-7">
                        <h6 class="h2 text-white d-inline-block mb-0">CRM</h6>
                        <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                                <li class="breadcrumb-item"><i class="fas fa-chalkboard-teacher text-yellow"></i></li>
                                <li class="breadcrumb-item">Service Commercial</li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Mes Contacts
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-lg-6 col-5 text-right">
                        {#<a href="{{ path('new_client') }}" class="btn btn-sm btn-success">Nouveau prospect</a>#}
                        {#<a href="#" class="btn btn-sm btn-neutral">Filters</a>#}
                    </div>
                </div>
                <!-- Card stats -->
            </div>
        </div>
    </div>


    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <div class="row">
                            <div class="col-md-9">
                                <h3 class="mb-0">Total: {{ all_commercial_appointments|length }} Contacts</h3>
                            </div>
                            <div class="col-md-3">
                                {#<input type="text" class="form-control " placeholder="Recherche" id="contact-filter">#}
                            </div>
                        </div>
                    </div>
                    <!-- Light table -->
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Actions</th>
                                <th scope="col">Email</th>
                                {#<th scope="col">Société</th>#}
                                <th scope="col">Catégorie</th>
                                {#<th scope="col">Equipement</th>#}
                                {#<th scope="col">Sous Contrat</th>#}
                                <th scope="col">Adresse</th>
                                <th scope="col">Code Postal</th>
                                <th scope="col">Département</th>
                                <th scope="col">Commune</th>
                                <th scope="col">Pays</th>
                                <th scope="col">Numéro Domicile</th>
                                <th scope="col">Numéro Mobile</th>
                                <th scope="col">Société</th>
                                <th scope="col">Sous Contrat</th>

                                {#<th scope="col">Traitement</th>#}
                                {#<th scope="col">Consultation</th>
                                <th scope="col">Modification</th>
                                <th scope="col">Suppression</th>#}
                            </tr>
                            </thead>
                            <tbody class="list">


                            {% for commercial_appointment in commercial_appointments %}

                                <tr class="clickable-row" data-href="{{ path('show_contact', {'id': commercial_appointment.client.id}) }}">
                                    <td class="budget">
                                        {{ commercial_appointment.client.firstName }}
                                    </td>

                                    <td class="budget">
                                        {{ commercial_appointment.client.lastName }}
                                    </td>
                                    <td >
                                        <a href="{{ path('show_contact', {'id': commercial_appointment.client.id}) }}"><i class="fas fa-search-plus text-blue"></i></a>&nbsp;&nbsp;
                                        <a href="{{ path('full_update_contact', {'id': commercial_appointment.client.id}) }}"><i class="fas fa-edit text-yellow"></i></a>&nbsp;&nbsp;
                                        <a href="" data-toggle="modal" data-target="#deleteModal{{ commercial_appointment.client.id }}"><i class="fas fa-trash-alt text-red"></i></a>

                                    </td>

                                    <td class="budget">
                                        {{ commercial_appointment.client.email }}
                                    </td>

                                    {#<td class="budget">
                                        {{ commercial_appointment.client.companyName }}
                                    </td>#}

                                    <td class="budget">
                                        {{ commercial_appointment.client.category }}
                                    </td>

                                    {#<td class="budget">
                                        {% if client.providedEquipment %}
                                        {{ client.providedEquipment.designation }}
                                        {% else %}
                                        {% endif %}
                                    </td>#}

                                    {#<td class="budget">
                                        {% if  commercial_appointment.client.isUnderContract %}
                                            Oui
                                        {% else %}
                                            Non
                                        {% endif %}
                                    </td>#}

                                    <td class="budget">
                                        {{ commercial_appointment.client.address }}
                                    </td>

                                    <td class="budget">
                                        {{ commercial_appointment.client.postalCode }}
                                    </td>

                                    <td class="budget">
                                        {{ commercial_appointment.client.geographicArea.designation }}
                                    </td>

                                    <td class="budget">
                                        {{ commercial_appointment.client.city }}
                                    </td>

                                    <td class="budget">
                                        {{ commercial_appointment.client.country }}
                                    </td>

                                    <td class="budget">
                                        {{ commercial_appointment.client.phoneNumber }}
                                    </td>

                                    <td class="budget">
                                        {{ commercial_appointment.client.mobileNumber }}
                                    </td>

                                    <td class="budget">
                                        {{ commercial_appointment.client.companyName }}
                                    </td>

                                    <td class="budget">
                                        {% if  commercial_appointment.client.isUnderContract %}
                                            Oui
                                        {% else %}
                                            Non
                                        {% endif %}
                                    </td>



                                   {# <td >
                                        <a href="{{ path('call_handle', {'id': commercial_appointment.client.id}) }}"  class="badge badge-default" >Traiter Fiche</a>
                                    </td>#}





                                    {#<td >
                                    <a href="{{ path('show_client', {'id': client.id}) }}"  class="badge badge-default" >Consulter Fiche</a>
                                </td>

                                <td >
                                    <a href="{{ path('update_client', {'id': client.id}) }}"  class="badge badge-info" >Modifier Contact</a>
                                </td>

                                <td >
                                    <a href="{{ path('new_client') }}" data-href="/admin_resp/ingenieur/oussingenieurref/deleted" class="badge badge-danger" data-toggle="modal" data-target="#deleteModal">Supprimer Contact</a>
                                </td>#}

                                </tr>
                                <div class="modal fade" id="deleteModal{{ commercial_appointment.client.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header" style="margin: 0 auto">
                                                <h5 class="modal-title" id="exampleModalLabel">Avertissement</h5>
                                            </div>
                                            <div class="modal-body" style="margin: 0 auto">
                                                Êtes-vous sûr de vouloir supprimer "{{ commercial_appointment.client.firstName ~ ' ' ~ commercial_appointment.client.lastName }}" ?
                                            </div>
                                            <div class="modal-footer" style="margin: 0 auto">
                                                <button type="button" class="btn btn-success" data-dismiss="modal">Annuler</button>
                                                <a href="{{ path('delete_contact', {'id': commercial_appointment.client.id}) }}" class="btn btn-danger">Confirmer</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                    <!-- Card footer -->
                    {{ knp_pagination_render(commercial_appointments) }}
                    {#<div class="card-footer py-4">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">
                                        <i class="fas fa-angle-left"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="fas fa-angle-right"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>#}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block additionalJs %}
    <script>
        $('#pagination').hover(function () {
            $(this).css('cursor','pointer');
        })

        $('#pagination').change(function () {

            $.ajax({
                url:"{{ path('teleprospecting_pagination') }}",
                method: "POST",
                dataType: 'json',
                data : { paginationValue: this.value },
                success: (e) => {
                    location.reload();
                },
                error : (f) => {
                    console.log(f);
                }
            })

        })

        if($(".clickable-row")) {
            $(".clickable-row").hover(function () {
                $(this).css('cursor', 'pointer');
            });

            $(".clickable-row").dblclick(function () {
                window.location = $(this).data("href");
            });
        }

    </script>
{% endblock %}
