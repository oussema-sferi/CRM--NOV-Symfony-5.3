{% extends 'base-PDF.html.twig' %}
{% block head %}
    <style>
        #payments {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        #payments td, #payments th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #payments tr:nth-child(even){background-color: #f2f2f2;}

        #payments tr:hover {background-color: #ddd;}

        #payments th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #04AA6D;
            color: white;
        }
    </style>
{% endblock %}
{% block title %}
    Réglement
{% endblock %}
{% block body %}
    <h1 class="text-center">Bon de Réglement</h1>
    <div class="table-responsive">
        <table id="payments" class="table align-items-center table-flush">
            <thead class="thead-light">
            <tr>
                <th scope="col">N° Réglement</th>
                <th scope="col">Valeur</th>
                <th scope="col">Date prévue de paiement</th>
                <th scope="col">État</th>
                <th scope="col">Méthode de paiement</th>
                <th scope="col">Date d'encaissement</th>
            </tr>
            </thead>
            <tbody class="list">
                <tr>
                    <td class="budget">
                        {{ payment.paymentNumber }}
                    </td>

                    <td class="budget">
                        {{ payment.value }} €
                    </td>

                    <td class="budget">
                        {{ payment.paymentDate | format_datetime('short', 'none', locale='fr') }}
                    </td>

                    <td class="budget">
                        {% if payment.isPaid == 1 %}
                            Payé
                        {% else %}
                            Non Payé
                        {% endif %}
                    </td>
                    <td class="budget">
                        {% if payment.paymentMethod == 1 %}Carte Bancaire{% elseif payment.paymentMethod == 2 %}Virement Bancaire{% elseif payment.paymentMethod == 3 %}Chèque{% elseif payment.paymentMethod == 4 %}Espèces{% else %}N/A{% endif %}
                    </td>
                    <td>
                        {% if payment.isPaid == 1 %}
                            {{ payment.paymentReceiptDate | format_datetime('short', 'none', locale='fr') }}
                        {% else %}
                            N/A
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}









